#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk

%:
	dh $@ --buildsystem cargo

override_dh_installman:
	help2man \
		--name dotenv \
		--no-info \
		--no-discard-stderr \
		--version-string $(DEB_VERSION_UPSTREAM) \
		debian/dotenv/usr/bin/dotenv > debian/dotenv.1
	dh_installman -O--buildsystem=cargo
