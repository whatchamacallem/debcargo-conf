#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk

%:
	dh $@ --buildsystem cargo

override_dh_installman:
	help2man \
		--name "ntp-rs-ctl" \
		--no-info \
		--version-string $(DEB_VERSION_UPSTREAM) \
		debian/ntpd-rs/usr/bin/ntp-rs-ctl > debian/ntp-rs-ctl.1

	help2man \
		--name "ntp-rs-daemon" \
		--no-info \
		--version-string $(DEB_VERSION_UPSTREAM) \
		debian/ntpd-rs/usr/bin/ntp-rs-daemon > debian/ntp-rs-daemon.1

	help2man \
		--name "ntp-rs-metrics-exporter" \
		--no-info \
		--version-string $(DEB_VERSION_UPSTREAM) \
		debian/ntpd-rs/usr/bin/ntp-rs-metrics-exporter > debian/ntp-rs-metrics-exporter.1

	dh_installman -O--buildsystem=cargo

override_dh_dwz:
	# Don't do anything. fails because of the
	# https://github.com/rust-lang/rust/issues/66118
