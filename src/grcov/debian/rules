#!/usr/bin/make -f

# Workaround:
# https://github.com/rust-lang/rust/issues/66118
export RUSTFLAGS=-Clto=no

include /usr/share/dpkg/pkg-info.mk

%:
	dh $@ --buildsystem cargo

